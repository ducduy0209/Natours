if user
  if !user.isConfirmEmail
    .alert.alert--success Please go to your email and activate your account 

header.header 
  nav.nav.nav--tours
    a.nav__el(href='/') All tours 
    form.nav__search
      button.nav__search-btn 
        svg 
          use(xlink:href='/img/icons.svg#icon-search')
      input(type='text' placeholder='Search tours').nav__search-input
  .header__logo 
    img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
    if user
      if tour
        - let count = 0
        each favouriteTour in user.favouriteTours
          - if(JSON.stringify(tour.id) === JSON.stringify(favouriteTour._id))
            - count = 1
        if count > 0
          i.fa-regular.fa-heart.heart--icon.hide(data-tour-id=`${tour.id}`)
          i.fa-solid.fa-heart.heart--icon__liked.active(data-tour-id=`${tour.id}`)
        else 
          i.fa-regular.fa-heart.heart--icon.active(data-tour-id=`${tour.id}`)
          i.fa-solid.fa-heart.heart--icon__liked.hide(data-tour-id=`${tour.id}`)
        p.description__heart
        .circle-loading.hide
      a.nav__el.nav__el--loggout Log out 
      a(href='/me').nav__el
        img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`).nav__user-img
        span= user.name.split(' ')[0] 
    else
      a(href='/login').nav__el Log in
      a(href='/signup').nav__el.nav__el--cta Sign up